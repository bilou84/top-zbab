doctype html
html
  head
    meta(charset="utf-8")
    title Top Zbab
    link(rel="stylesheet",href="index.css")

  body
    img.logo(src="logo.png")

    .buttons
      button.new-menu(disabled) Nouveau menu
      button.shopping-list(disabled) Liste de courses

    - var days = ["Lundi", "Mardi", "Mercredi", "Jeudi", "Vendredi", "Samedi", "Dimanche"]

    mixin meal(meal)
      tr(data-meal=meal).category-time
        th(rowspan=5)=meal
        each day in days
          td(data-day=day)
            div
              p.category
              p.time

      tr(data-meal=meal).title
        each day in days
          td(data-day=day)

      tr(data-meal=meal).sidedish
        each day in days
          td(data-day=day)
            select(disabled)

      tr(data-meal=meal).notes
        each day in days
          td(data-day=day)
            textarea(disabled)

      tr(data-meal=meal).source
        each day in days
          td(data-day=day)

    .calendar
      table
        tr.header
          th Jour
          each day in days
            th= day

        +meal("Midi")
        +meal("Soir")

    script(src="index.js")
