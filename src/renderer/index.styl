html, body {
  height: 100%;
  margin: 0;
}

body {
  display: flex;
  flex-flow: column;
  font-family: sans-serif;
}

h1 {
  text-align: center;
}

.buttons {
  padding: 0.5em;

  button { margin-right: 5px; }
}

.calendar {
  flex: 1;
  padding: 0.5em;
  display: flex;
}

table {
  width: 100%;
  height: 100%;
}

table, th, td {
  border: 1px solid black;
  border-spacing: 0;
  border-collapse: collapse;
  text-align: center;
}

tr.header {
  height: 5%;
}

th:first-child {
  width: 5%
}

th, td {
  width: 13%;
}

td {
  padding: 0px 3px 0px 3px;
}

tr.category-time {
  height: 5%;
  

  div {
    display: flex;
    justify-content: space-between;
  }

  td {
    font-size: 12px;
    border-bottom: none;
  }
}

tr.title, tr.sidedish, tr.notes {
  td {
    border-bottom: none;
    border-top: none;
  }
}

tr.notes textarea {
  width: 90%;
}

tr.source {
  height: 5%;

  td {
    font-size: 10px;
    border-top: none;
  }
}
